@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Index";
}


<script src="~/Content/ClassInfo.js"></script>


<h2>班级信息</h2>


<div id="toolbar" class="btn-group">
    <button id="Add" type="button" class="btn btn-default" onclick="add()">
        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>添加
    </button>
    <button id="Edit" type="button" class="btn btn-default" onclick="edit()">
        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>修改
    </button>

    <button id="Del" type="button" class="btn btn-default" onclick="del()">
        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>删除
    </button>
</div>


<input id="_id" type="hidden" value="" />
<input id="_name" type="hidden" value="" />
<input id="_number" type="hidden" value="" />

<table class="info"></table>



<div class="modal fade" id="Modal_add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog" role="document">
        <input id="editId" type="hidden" value="" />
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
                <h4 class="modal-title" id="myModalLabel1">添加班级</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">班级名称</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="班级名称" style="width: 100%;">
                </div>
                <div class="form-group">
                    <label for="number">班级人数</label><br />
                    <input type="text" name="number" class="form-control" id="number" placeholder="班级人数" style="width: 100%;">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn_add" class="btn btn-primary" onclick="btn_add()">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>

            @*@Html.Partial("AddPartialView")*@
        </div>
    </div>
</div>

<div class="modal fade" id="Modal_edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
        <input id="editId" type="hidden" value="" />
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
                <h4 class="modal-title" id="myModalLabel2">修改班级</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="edit_name">班级名称</label>
                    <input type="text" name="edit_name" class="form-control" id="edit_name" placeholder="班级名称" style="width: 100%;">
                </div>
                <div class="form-group">
                    <label for="edit_number">班级人数</label><br />
                    <input type="text" name="edit_number" class="form-control" id="edit_number" placeholder="班级人数" style="width: 100%;">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn_edit" class="btn btn-primary" onclick="btn_edit()">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>

            @*@Html.Partial("AddPartialView")*@
        </div>
    </div>
</div>

